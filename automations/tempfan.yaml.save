- alias: Fans on

  trigger:
    - platform: numeric_state
      entity_id: sensor.house_temp
      above: 77

  action:
    - service: switch.turn_on
      entity_id: switch.sonoff7
    - service: switch.turn_on
      entity_id: switch.sonoff2

- alias: Fans off

  trigger:
    - platform: numeric_state
      entity_id: sensor.house_temp
      below: 75

  action:
    - service: switch.turn_off
      entity_id: switch.sonoff7
    - service: switch.turn_off
      entity_id: switch.sonoff2
